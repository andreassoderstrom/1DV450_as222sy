<h2> Redigera <%= @ticket.name %> </h2>

<%= form_for @ticket do |t| %>
	<%= t.label :name %>
	<%= t.text_field :name %>
	<%= t.label :description %>
	<%= t.text_field :description %> 
	<%= t.select :status_id, options_from_collection_for_select(Status.all, :id, :status_name) %>
	<%= t.submit "Uppdatera ticket" %>

<% end %>